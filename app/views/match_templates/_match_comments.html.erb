<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    <strong>Comments</strong>

    <a data-toggle="collapse" href="#match_comments_new_form">
      Add comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @match.comments.each do |comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%if current_user != comment.author %>
            <a>
          <strong><%= comment.body %></strong> - by: <%= comment.author.username %>
            </a>
        <% else%>
           <a>
            <%= comment.body %> - by: <%= comment.author.username %>
           </a>
          
        <% end %>
      

        <%if current_user == comment.author %>
          <a href="/comments/<%= comment.id %>">
            Edit
          </a>
          
          <a href="/delete_comment_from_match/<%= comment.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="match_comments_new_form">
        <%= render partial: "match_templates/match_comments_new_form" %>
      </div>
    </div>

  </ul>
</div>
