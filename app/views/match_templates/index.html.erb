<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All my matches
    </h1>

  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "match_templates/matches_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Date
        </th>

        <th>
          Start time
        </th>

        <th>
          End time
        </th>

        <th>
          State
        </th>

        <th>
          Sender slot
        </th>

        <th>
          Recipient slot
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @matches.each do |match| %>
      <tr>
        <td>
          <%= match.id %>
        </td>

        <td>
          <%= match.date %>
        </td>

        <td>
          <%= match.start_time.strftime("%H:%M:%S %Z") %>
        </td>

        <td>
          <%= match.end_time.strftime("%H:%M:%S %Z") %>
        </td>

        <td>
          <%= match.state_id %>
        </td>

        <td>
          <% if match.sender_slot.present? %>
            <a href="/slots/<%= match.sender_slot.id %>">
              <%= match.sender_slot.user_id %>
            </a>
          <% end %>
        </td>

        <td>
          <% if match.recipient_slot.present? %>
            <a href="/slots/<%= match.recipient_slot.id %>">
              <%= match.recipient_slot.user_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(match.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(match.updated_at) %> ago
        </td>

        <td>
          <a href="/matches/<%= match.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @matches, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
