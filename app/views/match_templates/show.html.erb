<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Match  details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/matches" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

    </div>

    <dl>
      <dt>
        Date
      </dt>
      <dd>
        <%= @match.date %>
      </dd>

      <dt>
        Start time
      </dt>
      <dd>
        <%= @match.start_time %>
      </dd>

      <dt>
        End time
      </dt>
      <dd>
        <%= @match.end_time %>
      </dd>

      <!--<dt>-->
      <!--  State-->
      <!--</dt>-->
      <dd>
        <%= @match.state_id %>
      </dd>

      <dt>
        Related slot
      </dt>
      <dd>
        <% if @match.sender_slot.user_id == current_user.id %>
          <a href="/slots/<%= @match.sender_slot_id %>">
            View related slot
          </a>
          <%else%>
          <a href="/slots/<%= @match.recipient_slot_id %>">
            View related slot
          </a>
        <% end %>
      </dd>

    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "match_templates/match_comments" %>
  </div>
</div>

